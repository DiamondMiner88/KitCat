{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "CommonJS",
    "target": "es2020",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://kitcat:admin@localhost:5432/kitcat?sslmode=disable"
}

model GuildSettings {
  id            String   @id
  joinMessage   String?
  logChannel    String?
  reportChannel String?
  autoRoles     String[]
}

enum ModerationCaseType {
  WARN
  MUTE
  KICK
  SOFTBAN
  BAN
}

model ModerationCase {
  user      String
  guild     String
  type      ModerationCaseType
  reason    String
  endsAt    BigInt?
  createdAt BigInt

  @@id([user, guild])
}

model RRSet {
  message        String @id
  channel        String
  guild          String
  json           Json
  author         String
  createdAt      BigInt
  lastModifiedAt BigInt
  lastModifiedBy String
}

model Reminders {
  id      Int    @id @default(autoincrement())
  channel String
  guild   String
  time    BigInt
  creator String
  text    String
}

model CustomCommands {
  commandId      String @id // Slash command id
  commandName    String // Slash command name
  guild          String // Origin guild id
  content        String
  author         String // Original creator id
  createdAt      BigInt
  lastModifier   String // User id of person that last modified it
  lastModifiedAt BigInt
}
